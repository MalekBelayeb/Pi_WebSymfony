<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Avis" table="avis">
    <id name="idAvis" type="integer" column="id_avis">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="id" type="integer" column="id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="commentaire" type="string" column="commentaire" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="idEv" type="integer" column="id_ev" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
